<% if flash.any? %>
  <% user_facing_flashes.each do |key, value| %>
    <div class="alert alert-dismissable alert-<%= flash_class(key) %>">
      <button class="close" data-dismiss="alert"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
      <%= value %>
    </div>
  <% end %>
<% end %>
